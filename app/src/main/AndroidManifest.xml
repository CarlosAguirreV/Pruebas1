<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codigobase.pruebas1">

    <uses-feature
        android:name="android.hardware.sensor.acelerometer"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- AddMob (Google) - Aqui hay que poner el ID de la aplicacion. -->
        <!-- Tambien hay una linea en el build.gradle (app) -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" />

        <activity
            android:name=".controlador.actividades.AnunciosActivity"
            android:configChanges="screenSize|orientation" />
        <activity android:name=".controlador.actividades.BdActivity" />
        <activity android:name=".controlador.actividades.SonidosMusicaActivity" />
        <activity android:name=".controlador.actividades.DatosActivity" />
        <activity
            android:name=".controlador.actividades.CorrutinasActivity"
            android:configChanges="screenSize|orientation" />
        <activity
            android:name=".controlador.actividades.UiActivity"
            android:configChanges="screenSize|orientation" />
        <activity
            android:name=".controlador.actividades.LuzSensorActivity"
            android:configChanges="screenSize|orientation" />
        <activity
            android:name=".controlador.actividades.FantasmaActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".controlador.actividades.MainActivity"
            android:configChanges="screenSize|orientation"
            android:screenOrientation="fullSensor"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>