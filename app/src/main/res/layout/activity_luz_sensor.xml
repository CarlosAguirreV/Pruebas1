<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDark"
    tools:context=".LuzSensorActivity">

    <include
        android:id="@+id/iBarraSuperior"
        layout="@layout/barra_superior" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/progreso_circular" />

    <TextView
        android:id="@+id/txtTextoPorcentajeLuz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="100%"
        android:textAlignment="center"
        android:textColor="@color/colorLightGray"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/txtTextoSensorLuz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:text="TextoSensorLuz"
        android:textAlignment="textStart"
        android:textColor="@color/colorLightGray"
        android:textSize="20sp" />


</RelativeLayout>